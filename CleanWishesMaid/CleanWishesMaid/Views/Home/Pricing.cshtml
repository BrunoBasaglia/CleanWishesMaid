@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="hero-wrap hero-wrap-2" style="background-image: url('img/About/banner.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="../Home">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Pricing <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-0 bread">Pricing</h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center pb-5 mb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h2>Affordable Packages</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 ftco-animate">
                <div class="block-7">
                    <div class="img" style="background-image: url('img/Pricing/personal.jpg');"></div>
                    <div class="text-center p-4">
                        <span class="excerpt d-block">Personal</span>
                        <span class="price"><sup>$</sup> <span class="number">100</span> <sub>/hour</sub></span>

                        <ul class="pricing-text mb-5">
                            <li><span class="fa fa-check mr-2"></span>1 House Cleaning</li>
                            <li><span class="fa fa-check mr-2"></span>1 Visit </li>
                            <li><span class="fa fa-check mr-2"></span>3 Mops</li>
                            <li><span class="fa fa-check mr-2"></span>2 People</li>
                        </ul>
                        <a href="#" class="btn btn-primary d-block px-2 py-3">Get Started</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 ftco-animate">
                <div class="block-7">
                    <div class="img" style="background-image: url('img/Pricing/business.jpg');"></div>
                    <div class="text-center p-4">
                        <span class="excerpt d-block">Business</span>
                        <span class="price"><sup>$</sup> <span class="number">149</span> <sub>/hour</sub></span>

                        <ul class="pricing-text mb-5">
                            <li><span class="fa fa-check mr-2"></span>1 Oven</li>
                            <li><span class="fa fa-check mr-2"></span>1 Bla bla</li>
                            <li><span class="fa fa-check mr-2"></span>3 Bla bla bla</li>
                            <li><span class="fa fa-check mr-2"></span>1 Person</li>
                        </ul>
                        <a href="#" class="btn btn-primary d-block px-2 py-3">Get Started</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 ftco-animate">
                <div class="block-7">
                    <div class="img" style="background-image: url('img/Pricing/ultimate.jpg');"></div>
                    <div class="text-center p-4">
                        <span class="excerpt d-block">Ultimate</span>
                        <span class="price"><sup>$</sup> <span class="number">209</span> <sub>/hour</sub></span>
                        <ul class="pricing-text mb-5">
                            <li><span class="fa fa-check mr-2"></span>All windows</li>
                            <li><span class="fa fa-check mr-2"></span>3 Bla bla</li>
                            <li><span class="fa fa-check mr-2"></span>3 Bla bla</li>
                            <li><span class="fa fa-check mr-2"></span>4 People</li>
                        </ul>
                        <a href="#" class="btn btn-primary d-block px-2 py-3">Get Started</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
